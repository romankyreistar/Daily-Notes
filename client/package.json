    "@types/react-dom": "^18.0.10",
    "@vitejs/plugin-react": "^3.1.0",
    "babel-jest": "^29.7.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-css-modules-transform": "^4.4.2",
    "jest-environment-jsdom": "^29.7.0",
    "mutationobserver-shim": "^0.3.7",
    "ts-node": "^10.9.2",
    "vite": "^4.1.0",
    "vite-plugin-alias": "^0.1.1",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/(?!(jest-)?@?react-native|react-clone-referenced-element|@react-native-community|expo(nent)?|@expo(nent)?/.*|react-navigation|@react-navigation/.*|@unimodules/.*|unimodules|sentry-expo|native-base|@sentry/.*|victory-*)$"
    ],
    "testEnvironment": "jsdom",
    "moduleFileExtensions": [
      "css",
      "js",
      "json",
      "jsx",
      "ts",
      "tsx"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "\\.(jpg|ttf|eot|svg|gif|png)$": "<rootDir>/src/test/__mocks__/fileMock.ts",
      "\\.(css|less)$": "identity-obj-proxy",
      "^axios$": "axios"
    },
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "babel-jest",
      ".+\\.(css)$": "<rootDir>/node_modules/jest-css-modules-transform"
    },
    "moduleDirectories": [
      "src",
      "node_modules"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/test/setupTests.ts"
    ]
  }
}
